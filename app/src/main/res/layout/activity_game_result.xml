                            android:layout_marginLeft="15dp"
                            android:layout_weight="10"
                            android:text="PTS"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="10"
                            android:text="FLS"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/recycler_view_team_2_breakdown"/>
                </LinearLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>

            <LinearLayout
                android:id="@+id/results_breakdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/results_team_2_player_breakdown"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e1e1e1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/colorBackground" />

                <TextView
                    android:id="@+id/results_game_breakdown"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Game Breakdown"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e1e1e1" />
            </LinearLayout>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/results_game_breakdown_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/results_breakdown"
                app:el_duration="1000"
                app:el_expanded="false"
                android:background="#faf9f9">

                <TextView
                    android:id="@+id/results_game_breakdown_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp" />

            </net.cachapa.expandablelayout.ExpandableLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@id/results_game_breakdown_layout"
                android:background="@color/colorBackground" />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>