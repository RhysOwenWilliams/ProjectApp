<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/team_1_breakdown_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/team_1_breakdown_player_number"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="#20"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/team_1_breakdown_parent_name"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Rhys Williams"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground" />

        <TextView
            android:id="@+id/team_1_breakdown_player_score"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="16dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/team_1_breakdown_player_fouls"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="16dp"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground" />


</RelativeLayout>