<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/fixture_results_list_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fixture_results_list_team_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/cardiff_met_archers_2nds"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/fixture_results_list_team_1_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huskies 2nds"
                    android:layout_below="@id/fixture_results_list_team_1"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/fixture_results_list_team_1_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-10"
                    android:layout_marginTop="18dp"
                    android:layout_below="@id/fixture_results_list_team_1"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/results_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/fixture_results_list_team_1_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="30dp"/>
                <TextView
                    android:id="@+id/fixture_results_finished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="final"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/fixture_results_list_team_2_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="30dp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/live_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/live_current_quarter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIVE - Q1"
                    android:textColor="@color/colorSplash"
                    android:background="@color/colorAccent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fixtures_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/fixture_results_list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/fixture_results_list_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan 01 2019"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/fixture_results_list_time"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/fixture_results_list_team_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/cardiff_met_archers_2nds"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/fixture_results_list_team_2_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fixture_results_list_team_2"
                    android:layout_centerInParent="true"

                    android:textStyle="bold"
                    android:text="Nickname"/>

                <TextView
                    android:id="@+id/fixture_results_list_team_2_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-10"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="18dp"
                    android:layout_below="@id/fixture_results_list_team_2"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fixture_results_officiate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/fixtures_display"
                android:layout_marginTop="40dp"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OFFICIATE GAME"
                    android:textSize="16dp"
                    android:textColor="@color/colorSplash"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="3dp"/>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>