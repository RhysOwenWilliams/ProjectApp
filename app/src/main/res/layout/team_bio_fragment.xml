<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="612dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colorBackground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Team Details"
        android:textSize="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:paddingTop="5dp"
            android:id="@+id/selected_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="contact name"
            android:gravity="right"
            android:textSize="14dp"
            android:paddingRight="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorBackground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/selected_contact_email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="contact email address"
            android:textSize="14dp"
            android:gravity="right"
            android:paddingRight="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorBackground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/selected_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="address"
            android:gravity="right"
            android:paddingRight="10dp"
            android:textSize="14dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorBackground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kit Colourway"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/selected_kit_colourway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maroon/White"
            android:gravity="right"
            android:paddingRight="10dp"
            android:textSize="14dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#e1e1e1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colorBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center_vertical|center">
        <Button
            android:id="@+id/selected_team_location"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:text="view location"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>